<UserControl x:Class="GoogleOSD.TimePic"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GoogleOSD"
             mc:Ignorable="d" 
			 x:Name="root"
			 HorizontalAlignment="Center" VerticalAlignment="Center"
			 >
	<Grid >
		<!--ParentでまとめてChildrenのイベント発生を受け取る-->
		<StackPanel Orientation="Horizontal" Name="TimePic_sp" Margin="0,0,0,0" 
							ComboBox.SelectionChanged="StackPanel_SelectionChanged">
			<ComboBox Name="Hours_cb" HorizontalAlignment="Center" 
								VerticalAlignment="Center"  MinWidth="55" />
			<TextBlock Text="：" HorizontalAlignment="Center"  FontSize="18"/>
			<ComboBox Name="Minutes_cb" HorizontalAlignment="Center" 
									VerticalAlignment="Center"  MinWidth="55" />
		</StackPanel>
	</Grid>
</UserControl>