<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GoogleOSD"
        xmlns:Controls="clr-namespace:Microsoft.Toolkit.Wpf.UI.Controls;assembly=Microsoft.Toolkit.Wpf.UI.Controls.WebView" 
		x:Class="GoogleOSD.WebWindow"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen" 
        Title="web" Height="960" Width="1280" 
		ScrollViewer.HorizontalScrollBarVisibility="Auto" 
		ScrollViewer.VerticalScrollBarVisibility="Auto" Closing="Window_Closing">

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition />
		</Grid.RowDefinitions>
		<TextBox x:Name="url_tb" Grid.Row="0" HorizontalAlignment="Stretch"  Margin="10,10,10,0" TextWrapping="Wrap" 
						Text="" VerticalAlignment="Top" TextChanged="Url_tb_TextChanged"/>
		<Controls:WebView Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
										x:Name="web_wb" />
	</Grid>
</Window>
