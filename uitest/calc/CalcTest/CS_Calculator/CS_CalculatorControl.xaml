<UserControl x:Class="CS_Calculator.CS_CalculatorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CS_Calculator"
             mc:Ignorable="d" 
			 FocusManager.FocusedElement="{Binding ElementName=CalcProcess}"
			 Unloaded="UserControl_Unloaded" 
			PreviewKeyDown="UserControl_PreviewKeyDown"
			 KeyDown="UserControl_KeyDown"
	>
	<!--FontSize="12"
					  Height="250"
			Width="180"
	-->
	<UserControl.Resources>
		<Style TargetType="Button">
			<Setter Property="FontSize" Value="18" />
			<Setter Property="MinHeight" Value="24" />
			<Setter Property="Foreground" Value="Black" />
			<Setter Property="Margin" Value="1" />
			<Setter Property="VerticalAlignment" Value="Stretch" />
			<Setter Property="HorizontalAlignment" Value="Stretch" />
		</Style>
		<ControlTemplate x:Key="Calcbutton"
                         TargetType="Button">

			<Border Name="border"
                    BorderThickness="1"
                    BorderBrush="DarkGray"
                    CornerRadius="3"
                    TextBlock.Foreground="Black">
				<ContentPresenter VerticalAlignment="Center"
                                  HorizontalAlignment="Center" />
			</Border>

			<ControlTemplate.Triggers>
				<!--マウスオーバー時-->
				<Trigger Property="IsMouseOver"
                         Value="True">
					<Setter TargetName="border"
                            Property="Background"
                            Value="#FFEFFFFF" />
				</Trigger>

				<!--クリック時-->
				<Trigger Property="IsPressed"
                         Value="True">
					<Setter TargetName="border"
                            Property="Background"
                            Value="#FF154F99" />
					<Setter TargetName="border"
                            Property="TextBlock.Foreground"
                            Value="White" />
				</Trigger>
			</ControlTemplate.Triggers>
		</ControlTemplate>
	</UserControl.Resources>

	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="20*" />
			<ColumnDefinition Width="20*"/>
			<ColumnDefinition Width="40*" />
			<ColumnDefinition Width="40*" />
			<ColumnDefinition Width="40*" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions >
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition />
			<RowDefinition />
			<RowDefinition />
			<RowDefinition />
			<RowDefinition/>
		</Grid.RowDefinitions>

		<Label x:Name="CalcResult" 
						Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3"
						VerticalAlignment="Top" HorizontalAlignment="Stretch"
						FontSize="14"
						/>
		<!--						Content="{Binding ResultStr ,Mode=TwoWay}"
		-->
		<DataGrid x:Name="CalcProgress" 
							Grid.Row="0" Grid.Column="3"  Grid.ColumnSpan="2" Grid.RowSpan="2"
							MaxHeight="60"
							HeadersVisibility="None"
							AutoGenerateColumns="True"
							ColumnWidth="SizeToCells"
							 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
							HorizontalAlignment="Right" 
							HorizontalContentAlignment="Stretch"
							CanUserAddRows ="False" 
							CanUserReorderColumns="True"
							SelectedCellsChanged="CalcProgress_SelectedCellsChanged" 
							CellEditEnding="CalcProgress_CellEditEnding" 
							>
			<!---->

		</DataGrid>

		<StackPanel Orientation="Horizontal" 
							Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3">
			<Label x:Name="CalcOperation" Content="+" Margin="2,0,2,0"
						FontSize="12" Padding="0"
						/>
			<TextBox x:Name="CalcProcess"
							HorizontalAlignment="Stretch"
							FontSize="12"  Padding="0"
							IsReadOnly="True" 
							BorderThickness="0"
							/>
			<!--		Text="{Binding InputStr ,Mode=TwoWay}"	-->
		</StackPanel>
		<!--Content="C&#xa;BackSpace"-->
		<Button x:Name="ClearBt" Content="C" FontSize="18"
					Grid.Row="2" Grid.Column="0"
					Template="{StaticResource Calcbutton}"
					Click="ClearBt_Click" Grid.ColumnSpan="2">
		</Button>
		<!--Command="{Binding ClearClick}"-->
		<Button x:Name="SlashBt" Content="/" 
					Grid.Row="2" Grid.Column="2" FontSize="14"
					Template="{StaticResource Calcbutton}"
					Click="SlashBt_Click"  />
		<!--Command="{Binding SlashClick}"-->
		<Button x:Name="AsteriskBt" Content="*" 
					Grid.Row="2" Grid.Column="3"
					Template="{StaticResource Calcbutton}"
					Click="AsteriskBt_Click"  />
		<!--Command="{Binding AsteriskClick}"-->
		<Button x:Name="MinusBt" Content="-" 
					Grid.Row="2" Grid.Column="4"
					Template="{StaticResource Calcbutton}"
					Click="MinusBt_Click" />
		<!--Command="{Binding MinusClick}"-->

		<Button x:Name="SevenBt" Content="7" 
					Grid.Row="3" Grid.Column="0"
					Template="{StaticResource Calcbutton}"
					Click="SevenBt_Click" Grid.ColumnSpan="2"  />
		<!--Command="{Binding SevenClick}"-->
		<Button x:Name="EightBt" Content="8" 
					Grid.Row="3" Grid.Column="2"
					Template="{StaticResource Calcbutton}"
					Click="EightBt_Click"  />
		<!--Command="{Binding EightClick}"-->
		<Button x:Name="NineBt" Content="9" 
					Grid.Row="3" Grid.Column="3"
					Template="{StaticResource Calcbutton}"
					Click="NineBt_Click"  />
		<!--Command="{Binding NineClick}"-->
		<Button x:Name="FourBt" Content="4" 
					Grid.Row="4" Grid.Column="0"
					Template="{StaticResource Calcbutton}"
					Click="FourBt_Click" Grid.ColumnSpan="2"  />
		<!--Command="{Binding FourBtClick}"-->
		<Button x:Name="FiveBt" Content="5" 
					Grid.Row="4" Grid.Column="2"
					Template="{StaticResource Calcbutton}"
					Click="FiveBt_Click"  />
		<!--Command="{Binding FiveClick}"-->
		<Button x:Name="SixBt" Content="6" 
					Grid.Row="4" Grid.Column="3"
					Template="{StaticResource Calcbutton}"
					Click="SixBt_Click"  />
		<!--Command="{Binding SixClick}"-->

		<Button x:Name="OneBt" Content="1" 
					Grid.Row="5" Grid.Column="0"
					Template="{StaticResource Calcbutton}"
					Click="OneBt_Click" Grid.ColumnSpan="2"  />
		<!--Command="{Binding OneBtClick}"-->
		<Button x:Name="TwoBt" Content="2" 
					Grid.Row="5" Grid.Column="2"
					Template="{StaticResource Calcbutton}"
					Click="TwoBt_Click"  />
		<!--Command="{Binding TwoClick}"-->
		<Button x:Name="ThreeBt" Content="3" 
					Grid.Row="5" Grid.Column="3"
					Template="{StaticResource Calcbutton}"
					Click="ThreeBt_Click"  />
		<!--Command="{Binding ThreeClick}"-->
		<!--Content="CE&#xa;Delete"  FontSize="12"-->
		<Button x:Name="ClearAllBt" Content="CE"  FontSize="18"
					Grid.Row="6" Grid.Column="0"
					Template="{StaticResource Calcbutton}"
					Click="ClearAllBt_Click" Grid.ColumnSpan="2"
					/>
		<Button x:Name="ZeroBt" Content="0" 
					Grid.Row="6" Grid.Column="2"
					Template="{StaticResource Calcbutton}"
					Click="ZeroBt_Click" />
		<!--Command="{Binding ZeroClick}"-->
		<Button x:Name="PeriodBt" Content="." 
					Grid.Row="6" Grid.Column="3"
					Template="{StaticResource Calcbutton}"
					Click="PeriodBt_Click"  />
		<!--Command="{Binding PeriodClick}"-->

		<Button x:Name="PlusBt" Content="+" 
					Template="{StaticResource Calcbutton}"
					Grid.Row="3" Grid.Column="4" Grid.RowSpan="2"
					Click="PlusBt_Click"  />
		<!--Command="{Binding PlusClick}"-->
		<Button x:Name="EnterBt" Content="Enter"  FontSize="12"
					Grid.Row="5" Grid.Column="4" Grid.RowSpan="2"
					Template="{StaticResource Calcbutton}"
				Click="EnterBt_Click"  />
		<!--Command="{Binding PlusClick}"-->

	</Grid>

</UserControl>
