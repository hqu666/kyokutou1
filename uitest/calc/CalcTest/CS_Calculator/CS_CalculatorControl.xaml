<UserControl x:Class="CS_Calculator.CS_CalculatorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
			xmlns:local="clr-namespace:CS_Calculator"
             mc:Ignorable="d" 
			Unloaded="UserControl_Unloaded" 
			PreviewKeyDown="UserControl_PreviewKeyDown"
			KeyDown="UserControl_KeyDown"
	>

	<UserControl.Resources>
		<Style  TargetType="Button" x:Name="button_bace">
			<Setter Property="FontSize" Value="18" />
			<Setter Property="MinHeight" Value="24" />
			<Setter Property="Foreground" Value="Black" />
			<Setter Property="Margin" Value="1" />
			<Setter Property="VerticalAlignment" Value="Stretch" />
			<Setter Property="HorizontalAlignment" Value="Stretch" />
		</Style>

		<ControlTemplate x:Key="FuncButton"
									TargetType="Button"
									>
			<Border Name="border"
                    BorderThickness="1"
                    BorderBrush="DarkGray"
                    CornerRadius="1"
					Padding="0"
                    TextBlock.Foreground="Black"
					Background="LightCyan"
					VerticalAlignment="Top"
					Height="14"
					>
				<ContentPresenter VerticalAlignment="Center"
                                  HorizontalAlignment="Center" 
								  />
			</Border>

			<ControlTemplate.Triggers>
				<!--マウスオーバー時-->
				<Trigger Property="IsMouseOver"
                         Value="True">
					<Setter TargetName="border"
                            Property="Background"
                            Value="#FFEFFFFF" />
				</Trigger>

				<!--クリック時-->
				<Trigger Property="IsPressed"
                         Value="True">
					<Setter TargetName="border"
                            Property="Background"
                            Value="#FF154F99" />
					<Setter TargetName="border"
                            Property="TextBlock.Foreground"
                            Value="White" />
				</Trigger>
			</ControlTemplate.Triggers>
		</ControlTemplate>


		<ControlTemplate x:Key="Calcbutton"
                         TargetType="Button">

			<Border Name="border"
                    BorderThickness="1"
                    BorderBrush="DarkGray"
                    CornerRadius="3"
                    TextBlock.Foreground="Black">
				<ContentPresenter VerticalAlignment="Center"
                                  HorizontalAlignment="Center" />
			</Border>

			<ControlTemplate.Triggers>
				<!--マウスオーバー時-->
				<Trigger Property="IsMouseOver"
                         Value="True">
					<Setter TargetName="border"
                            Property="Background"
                            Value="#FFEFFFFF" />
				</Trigger>

				<!--クリック時-->
				<Trigger Property="IsPressed"
                         Value="True">
					<Setter TargetName="border"
                            Property="Background"
                            Value="#FF154F99" />
					<Setter TargetName="border"
                            Property="TextBlock.Foreground"
                            Value="White" />
				</Trigger>
			</ControlTemplate.Triggers>
		</ControlTemplate>

		<ContextMenu x:Key="OpeConMenu">
			<MenuItem Header="四則演算の優先順位で計算" Click="ProgressItemSepareat"/>
			<MenuItem Header="電卓処理：現在の結果に次の演算" Click="ProgressItemDelete"/>
		</ContextMenu>
		<Style x:Key="StyleForWindow" TargetType="{x:Type Label}" >
			<!--<EventSetter Event="MouseRightButtonUp" Handler="ProgressItemSepareat" />-->
			<Setter Property="ContextMenu" Value="{StaticResource OpeConMenu}"/>
		</Style>

		<ContextMenu x:Key="CellConMenu">
			<MenuItem Header="分割" Click="ProgressItemSepareat"/>
			<MenuItem Header="消去" Click="ProgressItemDelete"/>
		</ContextMenu>
		<Style x:Key="StyleForDataCell" TargetType="{x:Type DataGridCell}" >
			<!--<EventSetter Event="MouseRightButtonUp" Handler="ProgressItemSepareat" />-->
			<Setter Property="ContextMenu" Value="{StaticResource CellConMenu}"/>
		</Style>
		<!--https://social.msdn.microsoft.com/Forums/aspnet/ja-JP/2c1a9456-c824-4531-a3ed-d0b294961a43/datagriditemitem?forum=wpfja-->
	</UserControl.Resources>

	<Grid 
			FocusManager.FocusedElement="{Binding ElementName=NowOperations}"
		>
		<Grid.RowDefinitions >
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>
		<Label x:Name="CalcResult" 
						Grid.Row="0" Grid.Column="0"
						VerticalAlignment="Top"
						FontSize="14"
						/>
		<Grid Name="ProsessGrid"
				Grid.Row="2" 
				>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="15" />
				<ColumnDefinition Width="31.5"/>
				<ColumnDefinition Width="98.5"/>
				<ColumnDefinition Width="18" />
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions >
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
			</Grid.RowDefinitions>
			<TextBox x:Name="NowOperations" 
						Grid.Row="0" Grid.Column="0"
						Grid.ColumnSpan="3"
						VerticalAlignment="Top"
						FontSize="10"
						Margin="0"
						Padding="0" 
						TextWrapping="Wrap"
						IsReadOnly="True" 
						BorderThickness="0" 
						TextAlignment="Right" Background="{x:Null}" 
						/>
			<Button Name="CorpBt"
						Grid.Row="0" Grid.Column="3" 
						HorizontalAlignment="Right"
						MinHeight="5"
						Content="▼"
						FontSize="8" Click="CorpBt_Click" Margin="0"
				/>
		</Grid>
		<DataGrid x:Name="CalcProgress" 
							Grid.Row="3" Grid.Column="0"  Grid.ColumnSpan="3" 
							HeadersVisibility="None"
							AutoGenerateColumns="False"
							CellStyle="{StaticResource StyleForDataCell}"
							ColumnWidth="SizeToCells"
							MaxHeight="152"
							HorizontalAlignment="Stretch"
							VerticalAlignment="Stretch"
							HorizontalContentAlignment="Right"
							ScrollViewer.HorizontalScrollBarVisibility="Visible"
							ScrollViewer.VerticalScrollBarVisibility="Visible"
							CanUserAddRows ="False" 
							CanUserReorderColumns="True"
							SelectedCellsChanged="CalcProgress_SelectedCellsChanged" 
							CellEditEnding="CalcProgress_CellEditEnding"
							>
			<!--		
										SelectionUnit="Cell" だとselectitemが取得できない
										 ContextMenuOpening="CalcProgress_ContextMenuOpening" 

>-->

			<DataGrid.Columns>
				<DataGridTextColumn Header="Operater" Binding="{Binding Operater}"/>
				<DataGridTextColumn Header="Value" Binding="{Binding Value}" Width="*"/>
			</DataGrid.Columns>
		</DataGrid>

		<Grid Name="KeyGrid"
				Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="3"
				HorizontalAlignment="Stretch"
				VerticalAlignment="Stretch"
				>
			<Grid.Resources>
				<!--<Style x:Key="ButtonStyle" TargetType="Button"
								BasedOn="{StaticResource BasicStyle}">
						<Setter Property="BorderBrush" Value="Orange" />
						<Setter Property="BorderThickness" Value="2" />
						<Setter Property="Foreground" Value="Red" />
					</Style>-->
			</Grid.Resources>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="40*" />
				<ColumnDefinition Width="40*" />
				<ColumnDefinition Width="40*" />
				<ColumnDefinition Width="40*" />
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions >
				<RowDefinition Height="16*"/>
				<RowDefinition Height="40*"/>
				<RowDefinition Height="40*"/>
				<RowDefinition Height="40*"/>
				<RowDefinition Height="40*"/>
				<RowDefinition Height="40*"/>
				<RowDefinition Height="*"/>
				<RowDefinition/>
			</Grid.RowDefinitions>
			<Grid Name="FunctionGrid"
				Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4"
				HorizontalAlignment="Stretch"
				VerticalAlignment="Stretch"
				>
				<!--Visibility="Collapsed"-->
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="40*" />
					<ColumnDefinition Width="40*" />
					<ColumnDefinition Width="40*" />
					<ColumnDefinition Width="40*" />
					<ColumnDefinition Width="40*" />
					<!--	<ColumnDefinition Width="40*" />-->
				</Grid.ColumnDefinitions>
				<Grid.RowDefinitions >
					<RowDefinition Height="16" />
				</Grid.RowDefinitions>
				<ComboBox x:Name="MemoryComb" 
					FontSize="10" 
					Grid.Row="0" Grid.Column="0"
					Margin="2" 
					SelectionChanged="MemoryComb_SelectionChanged" MouseLeftButtonUp="MemoryComb_MouseLeftButtonUp" MouseRightButtonUp="MemoryComb_MouseRightButtonUp" 
					>
					<ComboBox.ContextMenu>
						<ContextMenu>
							<MenuItem Header="削除" Click="MemoryItemDeleat"/>
						</ContextMenu>
					</ComboBox.ContextMenu>
				</ComboBox>
				<Button x:Name="MemorySaveBt" Content="MS" 
					FontSize="9" 
					Grid.Row="0" Grid.Column="1"
					Template="{StaticResource FuncButton}" Click="MemorySaveBt_Click" 
					/>
				<Button x:Name="ParenBt" Content="("  
					Grid.Row="0" Grid.Column="2" 
					FontSize="7" 
					Template="{StaticResource FuncButton}" 
					Click="ParenBt_Click"
					 />
				<Button x:Name="ParenthesisBt" Content=")" 
					Grid.Row="0" Grid.Column="3" 
					FontSize="7" 
					Template="{StaticResource FuncButton}" 
					Click="ParenthesisBt_Click"
					 />
				<ToggleButton 
					x:Name="FunkBt" 
					Grid.Row="0" Grid.Column="4" 
					FontSize="7" 
					BorderThickness="1"
                    BorderBrush="DarkGray"
					Padding="0"
                    TextBlock.Foreground="Black"
					Background= "LightYellow"
					VerticalAlignment="Top" Margin="1,1,1,0" MinHeight="14"
					Loaded="FunkBt_Loaded"
				>
					<ToggleButton.ContextMenu>
						<ContextMenu>
							<MenuItem x:Name="PFAOMenu" Header="数式入力" Click="ChangeToPO"/>
							<MenuItem x:Name="PCOMenu" Header="電卓処理に戻す" Click="ChangeToCalculator"/>
							<Separator x:Name="TBMenuSeparator" />
							<MenuItem  x:Name="TBMenuFunc" Header="関数">
								<MenuItem  Header="X²  :Pow" Click="PowerFunc"/>
								<MenuItem Header="²√ｘ ;Squrt" Click="SqrtFunc"/>
								<MenuItem Header="三角関数">
									<MenuItem  Header="sin  :Sin" Click="SinFunc"/>
									<MenuItem Header="cos ;Cos" Click="CosFunc"/>
									<MenuItem  Header="tan  :Tan" Click="TanFunc"/>
									<MenuItem  Header="sin⁻¹ :Asin" Click="AsinrFunc"/>
									<MenuItem Header="cos⁻¹ ;Acos" Click="AcosFunc"/>
									<MenuItem  Header="tan⁻¹  :Atan" Click="AtanFunc"/>
								</MenuItem>
								<MenuItem Header="定数">
									<MenuItem Header="π      ;PI" Click="PIFunc"/>
								</MenuItem>
							</MenuItem>
						</ContextMenu>
					</ToggleButton.ContextMenu>
					<WrapPanel Margin="0,0">
						<TextBlock Text="func"/>
						<Border Width="1"/>
						<Path Width="6" Height="4" Stretch="Fill" Fill="Black" Data="F1 M0,0 L10,0 L5,10 Z "/>
					</WrapPanel>
				</ToggleButton>
			</Grid>
			<!--Content="C&#xa;BackSpace"-->
			<Button x:Name="ClearAllBt" Content="CA" FontSize="18"
					Grid.Row="1" Grid.Column="0"
					Background="#19FD0303"
					Template="{StaticResource Calcbutton}"
					Click="ClearAllBt_Click" >
			</Button>
			<!--Command="{Binding ClearClick}"-->
			<Button x:Name="SlashBt" Content="/" 
					Grid.Row="1" Grid.Column="1" FontSize="14"
					Template="{StaticResource Calcbutton}"
					Click="SlashBt_Click"  />
			<!--Command="{Binding SlashClick}"-->
			<Button x:Name="AsteriskBt" Content="*" 
					Grid.Row="1" Grid.Column="2"
					Template="{StaticResource Calcbutton}"
					Click="AsteriskBt_Click"  />
			<!--Command="{Binding AsteriskClick}"-->
			<Button x:Name="MinusBt" Content="-" 
					Grid.Row="1" Grid.Column="3"
					Template="{StaticResource Calcbutton}"
					Click="MinusBt_Click" />
			<!--Command="{Binding MinusClick}"-->

			<Button x:Name="SevenBt" Content="7" 
					Grid.Row="2" Grid.Column="0"
					Template="{StaticResource Calcbutton}"
					Click="SevenBt_Click" />
			<!--Command="{Binding SevenClick}"-->
			<Button x:Name="EightBt" Content="8" 
					Grid.Row="2" Grid.Column="1"
					Template="{StaticResource Calcbutton}"
					Click="EightBt_Click"  />
			<!--Command="{Binding EightClick}"-->
			<Button x:Name="NineBt" Content="9" 
					Grid.Row="2" Grid.Column="2"
					Template="{StaticResource Calcbutton}"
					Click="NineBt_Click"  />
			<!--Command="{Binding NineClick}"-->
			<Button x:Name="FourBt" Content="4" 
					Grid.Row="3" Grid.Column="0"
					Template="{StaticResource Calcbutton}"
					Click="FourBt_Click" />
			<!--Command="{Binding FourBtClick}"-->
			<Button x:Name="FiveBt" Content="5" 
					Grid.Row="3" Grid.Column="1"
					Template="{StaticResource Calcbutton}"
					Click="FiveBt_Click"  />
			<!--Command="{Binding FiveClick}"-->
			<Button x:Name="SixBt" Content="6" 
					Grid.Row="3" Grid.Column="2"
					Template="{StaticResource Calcbutton}"
					Click="SixBt_Click"  />
			<!--Command="{Binding SixClick}"-->

			<Button x:Name="OneBt" Content="1" 
					Grid.Row="4" Grid.Column="0"
					Template="{StaticResource Calcbutton}"
					Click="OneBt_Click"/>
			<!--Command="{Binding OneBtClick}"-->
			<Button x:Name="TwoBt" Content="2" 
					Grid.Row="4" Grid.Column="1"
					Template="{StaticResource Calcbutton}"
					Click="TwoBt_Click"  />
			<!--Command="{Binding TwoClick}"-->
			<Button x:Name="ThreeBt" Content="3" 
					Grid.Row="4" Grid.Column="2"
					Template="{StaticResource Calcbutton}"
					Click="ThreeBt_Click"  />
			<!--Command="{Binding ThreeClick}"-->
			<!--Content="CE&#xa;Delete"  FontSize="12"						-->
			<Button x:Name="ClearBt" Content="CE"  FontSize="18"
					Grid.Row="5" Grid.Column="0"
					Template="{StaticResource Calcbutton}"
					Click="ClearBt_Click"	/>
			<Button x:Name="ZeroBt" Content="0" 
					Grid.Row="5" Grid.Column="1"
					Template="{StaticResource Calcbutton}"
					Click="ZeroBt_Click" />
			<!--Command="{Binding ZeroClick}"-->
			<Button x:Name="PeriodBt" Content="." 
					Grid.Row="5" Grid.Column="2"
					Template="{StaticResource Calcbutton}"
					Click="PeriodBt_Click"  />
			<!--Command="{Binding PeriodClick}"-->

			<Button x:Name="PlusBt" Content="+" 
					Template="{StaticResource Calcbutton}"
					Grid.Row="2" Grid.Column="3" Grid.RowSpan="2"
					Click="PlusBt_Click"  />
			<!--Command="{Binding PlusClick}"-->
			<Button x:Name="EnterBt" Content="Enter"  FontSize="11"
					Grid.Row="4" Grid.Column="3" Grid.RowSpan="2"
					Template="{StaticResource Calcbutton}"
					Click="EnterBt_Click" KeyDown="EnterBt_KeyDown" 
					/>
			<!--<Button.InputBindings>
					<KeyBinding Gesture="Enter" Command="{Binding EnterFunc}"/>
				</Button.InputBindings>
			</Button>-->
			<!--					
			Command="{Binding PlusClick}"-->
		</Grid>
	</Grid>

</UserControl>
