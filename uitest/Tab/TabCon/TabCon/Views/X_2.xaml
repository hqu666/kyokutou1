			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto" />
				<ColumnDefinition Width="Auto" />
				<ColumnDefinition Width="Auto" />
				<ColumnDefinition Width="Auto"  />
				<ColumnDefinition Width="Auto"  />
			</Grid.ColumnDefinitions>

			<!-- DataGrid（画面左側）：双方向バインド（UI上での変更がデータに反映される）Grid.ColumnSpan="4"  
			 CanUserDeleteRows="True"		
			-->
			<!--AutoGenerateColumns	;	Columnsで定義していないBindingを表示しない-->
			<DataGrid x:Name="Attachments_dg"
				   HorizontalAlignment="Left" 
				  Height="110"  Grid.ColumnSpan="5" Margin="0,0,-12,1" Width="487"
				  ItemsSource="{Binding DataContext, Mode=TwoWay, RelativeSource={RelativeSource Self}}" 
				   SelectionMode="Single" VerticalAlignment="Center" GridLinesVisibility="None"
				  AutoGenerateColumns="False" Background="#55F0F0F0"
				  >
				<!--SelectionChanged="Attachments_SelectionChanged"-->
				<DataGrid.Columns>
					<DataGridTemplateColumn Header=" " >
						<DataGridTemplateColumn.CellTemplate>
							<DataTemplate >
								<Image Source="{Binding IconLink}" Margin="5,0,5,0" />
							</DataTemplate>
						</DataGridTemplateColumn.CellTemplate>
					</DataGridTemplateColumn>
					<DataGridTextColumn Binding="{Binding Title}" Header="ファイル名" IsReadOnly="True"/>
					<DataGridTextColumn Binding="{Binding Modifi}" Header="更新日" IsReadOnly="True" />
					<DataGridTextColumn Binding="{Binding Size}" Header="サイズ"  IsReadOnly="True"/>
					<DataGridTemplateColumn Header="解除" >
						<DataGridTemplateColumn.CellTemplate>
							<DataTemplate >
								<Button  Style="{StaticResource bt-dell}"  Tag="{Binding}" IsEnabled="{Binding Actionable}"/>
								<!--Click="Release_Click"-->
							</DataTemplate>
						</DataGridTemplateColumn.CellTemplate>
					</DataGridTemplateColumn>
					<DataGridTemplateColumn Header="削除" >
						<DataGridTemplateColumn.CellTemplate>
							<DataTemplate >
								<Button Style="{StaticResource bt-dell}"  Tag="{Binding}" IsEnabled="{Binding Actionable}"/>
								<!--Click="RemoveAt_Click"-->
							</DataTemplate>
						</DataGridTemplateColumn.CellTemplate>
					</DataGridTemplateColumn>

				</DataGrid.Columns>
			</DataGrid>
