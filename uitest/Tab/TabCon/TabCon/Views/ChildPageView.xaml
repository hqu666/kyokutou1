<Page x:Class="TabCon.Views.ChildPageView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:ei="http://schemas.microsoft.com/expression/2010/interactions"
        xmlns:l="http://schemas.livet-mvvm.net/2011/wpf"
        xmlns:v="clr-namespace:TabCon.Views"
		xmlns:vm="clr-namespace:TabCon.ViewModels"
		xmlns:b="clr-namespace:TabCon.Behaviors"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TabCon.Views"
      Height="450" Width="800"
      Title="ChildPageView">

	<Page.DataContext>
		<vm:ChildPageViewModel />
	</Page.DataContext>

	<Grid>
		<Label Name="CInfo_lb" Content="{Binding CInfo_lb}" HorizontalAlignment="Left" VerticalAlignment="Top" Width="365"/>
		<Button Command="{Binding CloseCommand}" Content="閉じる" Height="32"
                HorizontalAlignment="Right" Margin="20,20,20,20" Name="button1"
                VerticalAlignment="Bottom" MinWidth="100" />

	</Grid>
</Page>
