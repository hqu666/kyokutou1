		<i:Interaction.Behaviors>
			<b:CloseButtonBehavior IsWindowCloseEnable="{Binding ElementName=CloseCheck, Path=IsChecked}"/>
		</i:Interaction.Behaviors>-->

		<Grid Margin="0,0,0,0" >
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto"/>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions >
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>

			<TreeView x:Name="Menu_tv"
				Grid.Row="0" Grid.Column="0"
				Grid.RowSpan="2"
				Margin="10,0,5,0" Padding="5,5,5,5" MinHeight="710"   MinWidth="120"   Height="Auto" Width="Auto"
				ItemsSource="{Binding _MyMenu}" >
				<i:Interaction.Triggers>
					<i:EventTrigger EventName="MouseDoubleClick">
						<ei:CallMethodAction MethodName="MenuSelected" TargetObject="{Binding}"/>
					</i:EventTrigger>
				</i:Interaction.Triggers>
				<TreeView.Resources>
					<Style TargetType="TreeViewItem">
						<Setter Property="IsSelected" Value="{Binding Path=IsSelected,Mode=TwoWay}"/>
					</Style>
				</TreeView.Resources>
				<TreeView.ItemTemplate>
					<HierarchicalDataTemplate DataType= "local:MyMenu" ItemsSource="{Binding Child}">
						<TextBlock Text="{Binding Name}">
						</TextBlock>
					</HierarchicalDataTemplate>
				</TreeView.ItemTemplate>
			</TreeView>
		<!--<ct1:WebView Name = "webView" 
					Grid.Row="1" Grid.Column="0"
										Source="https://www.yahoo.co.jp/"
									  />-->
		<!--<wv2:WebView2 Name = "webView"
					Grid.Row="1" Grid.Column="0"
					Source = "https://www.yahoo.co.jp/"
					  />-->
		<Label x:Name="Info_lv" Content="{Binding InfoLavel}"  
							Grid.Row="0" Grid.Column="1" 
							Height="Auto"  Width="Auto"
							MinHeight="50" Margin="5,5,5,5"/>

			<local:ViewTabControl x:Name="ViewTab" Height="Auto" Width="Auto"
						Grid.Row="1" Grid.Column="1"
						VerticalAlignment="Stretch" 
						HorizontalAlignment="Stretch" 
						/>
		</Grid>
