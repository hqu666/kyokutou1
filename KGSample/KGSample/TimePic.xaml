<UserControl x:Class="KGSample.TimePic"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KGSample"
             mc:Ignorable="d" 
			 x:Name="root"
			 HorizontalAlignment="Center" VerticalAlignment="Center"
			 >
	<Grid >
		<StackPanel Orientation="Horizontal" >
			<ComboBox Name="Hours_cb" HorizontalAlignment="Center" VerticalAlignment="Center"  MinWidth="55" 
								SelectionChanged="Hours_cb_SelectionChanged"/>
			<TextBlock Text="：" HorizontalAlignment="Center"  FontSize="18"/>
			<ComboBox Name="Minutes_cb" HorizontalAlignment="Center" VerticalAlignment="Center"  MinWidth="55" 
								SelectionChanged="Minutes_cb_SelectionChanged"/>
		</StackPanel>
	</Grid>
</UserControl>

